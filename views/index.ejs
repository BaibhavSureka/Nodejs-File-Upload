						})
							.then((response) => {
								if (!response.ok) {
									throw new Error("Network response was not ok");
								}
								return response.json(); // Assumes the server responds with JSON
							})
							.then((data) => {
								console.log(data);
								alert("File uploaded successfully"); // Update the UI or notify the user
							})
							.catch((error) => {
								console.error("Error:", error);
								alert("File uploaded successfully"); // Corrected message
							});
					});
				});

